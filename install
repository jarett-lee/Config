#!/bin/bash

pushd . &>/dev/null
cd $(dirname $0)

backup_dir=$(pwd)/backup
file_dir=$(pwd)/files

cp_num() {
  local src=$1
  local dest_dir=$2
  local dest_name=$(date +"%Y-%m-%d")_$3
  cp -a "$src $dest_dir/$dest_name"
}

replace() {
  local filename=$1
  local dest_dir=$2

  case "$#" in
    1)
      dest_dir=~
      ;;
    2)
      ;;
    *)
      exit 1
      ;;
  esac

  # Check the source file exists
  if [ ! -f "$file_dir/$filename" ]; then
    echo "$filename not found!"
    exit 1
  fi

  # Create dated backup
  if [ -f "$file_dir/$filename" ]; then
    cp_num "$dest_dir/$filename" "$backup_dir" "$filename" 2>/dev/null
  else
    rm "$dest_dir/$filename"
  fi

  # Replace the old file with a symlink to the files
  rm "$dest_dir/$filename" 2>/dev/null
  ln -s "$file_dir/$filename" "$dest_dir/$filename"
}

do=replace

case "$1" in
  --test|-t)
    do="echo $do"
    ;;
  --help|-h)
    echo "options:"
    exit 1
    ;;
esac

mkdir old &>/dev/null

while read -a p; do
  case "${#p[@]}" in
    1)
      $do "${p[0]}"
      ;;
    2)
      $do "${p[0]}" "${p[1]}"
      ;;
    *)
      ;;
  esac
done < files.txt

popd &>/dev/null
